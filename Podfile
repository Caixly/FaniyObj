platform :ios, '8.1'
#use_frameworks!个别需要用到它，比如reactiveCocoa

target 'PublicBaseProduct' do
  pod 'AFNetworking', '~> 3.0.4'                      # 网络封装
  pod 'MJExtension'
  pod 'Reachability', '~> 3.2'                        # 网络状态检测
  pod 'MBProgressHUD', '~> 0.9.1'                     #
  pod 'MJRefresh', '~> 3.1.0'                         # 上拉下拉刷新控件
  pod 'SDWebImage', '~> 3.7.5'                        # 网络图片＋图片缓存
  pod 'Masonry', '~> 0.6.4'                           # 简化约束代码
  pod 'UIViewController+KeyboardAnimation', '~> 1.2'  # 键盘动画
  pod 'DZNEmptyDataSet', '~> 1.8.1'                   # 空TableView处理
  pod 'ReactiveCocoa', '~> 2.5'                       # RAC支持

  pod 'EGOCache', '~> 2.1.3'                          # 缓存
  pod 'UITableView+FDTemplateLayoutCell', '~> 1.5.beta'  # cell动态高度
  pod 'MWPhotoBrowser', '~> 2.1.1'                    # 图片浏览
  pod 'EAIntroView', '~> 2.8.1'                       # 启动介绍页
  pod 'UIColor+Hex', '~> 1.0.1'                       # 16进制颜色
  pod 'LCBannerView', '~> 2.1.0'                      # 广告轮播
  pod 'NJKWebViewProgress', '~> 0.2.3'                # webview进度条
  
  pod 'IQKeyboardManager'

  # 自己的库
  pod 'YJRouter', '~> 1.0.0'
  pod 'YJMacro', '~> 1.0.1'
